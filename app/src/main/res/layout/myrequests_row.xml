<?xml version="1.0" encoding="utf-8"?>

<com.myprice.value.utils.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:dragFromEdge="right">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ic_edit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="@dimen/dim20sp"
            app:srcCompat="@android:drawable/ic_menu_edit" />
        <ImageView
            android:id="@+id/ic_delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="@dimen/dim20sp"
            app:srcCompat="@android:drawable/ic_delete" />


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardMaxElevation="10dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include layout="@layout/list_row" />
    </androidx.cardview.widget.CardView>
</com.myprice.value.utils.SwipeRevealLayout>